{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-istanbul": "^5.1.2",
    "babel-plugin-lodash": "^3.3.4",
    "bignumber.js": "^8.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "copy": "^0.3.2",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-markdown": "^1.0.0",
    "gh-pages": "^2.0.1",
    "lerna": "^3.13.3",
    "lodash-webpack-plugin": "^0.11.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^10.0.6",
    "node-metamask": "^1.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "pre-commit": "^1.2.2",
    "should": "^13.2.3",
    "standard": "^12.0.1",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.1"
  },
  "engines": {
    "node": "~8.12.0"
  },
  "standard": {
    "plugins": [
      "html",
      "markdown"
    ],
    "ignore": [
      "**/packages/**/dist/**",
      "docs/**"
    ]
  },
  "scripts": {
    "coverage": "nyc report $npm_package_options_coverage | coveralls",
    "lint": "standard $npm_package_options_standard",
    "build": "lerna run build --stream",
    "build:with-pkg-stats": "cross-env BUILD_PKG_STATS=true npm run build",
    "watch": "lerna run watch --parallel",
    "bootstrap": "lerna bootstrap",
    "test": "cross-env NODE_ENV=test nyc mocha packages/*/test/unit $npm_package_options_mocha",
    "test:swap": "cross-env NODE_ENV=test nyc mocha test/integration/swap $npm_package_options_mocha"
  },
  "options": {
    "coverage": "--reporter=text-lcov",
    "mocha": "--require ./babel.test.js --timeout 20000 --recursive",
    "standard": "\"**/*.js\" \"**/*.html\" \"**/*.md\""
  },
  "nyc": {
    "include": [
      "packages/**/lib/**"
    ],
    "exclude": [
      "**/bin/**",
      "**/coverage/**",
      "**/dist/**",
      "**/html/assets/**",
      "**/test/**"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "require": [
      "./babel.test.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "pre-commit": [
    "lint",
    "build",
    "test"
  ]
}
